class EFXCloudZone extends EFXZoneInfo;

// ----------------------------------------------------------------------------
// ActorEntered()
// ----------------------------------------------------------------------------

event ActorEntered( actor Other )
{
	if ( Other.IsA('Pawn') )
		Pawn(Other).Died(Pawn(Other).Enemy, 'Fell', Location);
	else
		Other.LifeSpan = 0.01;
}

